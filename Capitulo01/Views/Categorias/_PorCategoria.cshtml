@model IEnumerable<Capitulo01.Models.Produto>

<div class="panel panel-primary">
    <div class="panel-heading">
        Relação	de	PRODUTOS	registrados	para a Categoria
    </div>

    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CategoriaId)</th>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>Categoria</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.CategoriaId)</td>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Fabricante.Nome)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="panel-footer panel-info"></div>
</div>